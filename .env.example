# Ohio Beer Path Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_NAME=ohiobrewpath
DB_USER=root
DB_PASS=

# Google Maps API Key (Required for maps functionality)
# Get your API key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Site Configuration
SITE_URL=https://ohiobeerpath.com

# Default region for searches
DEFAULT_REGION=central

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=3600

# Application Environment (development, staging, production)
APP_ENV=production

# Debug Mode (true/false) - Never enable in production
DEBUG=false
